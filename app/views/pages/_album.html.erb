  <% date = @album.created_at %>
  <div class="album_details">
  <h1><%= @album.album_title %></h1>
  <h4><em>hidden on <%= format_date(date) %>, <%= @album.place_title %></em></h4>
  <div id="album_review"><%= markdown(@album.album_review) %></div>
  <div id="review_link"><em><a href="<%= @album.review_link %>" target="_blank">read the full review on Hear Nebraska</a></em></div>
  <hr>
  <h4><em>hints as to this record's hiding place at an Omaha business</em></h4>
    <div id="days">
      <div id="monday">
        <% if @hint.monday_title != "" %>
          <%= @hint.monday_title %>
          <div id="monday_thumbnail" style="background-image:url('<%= @hint.thumbnail %>')"></div>
        <% else %>
          MONDAY
          <div id="lock"></div>
        <% end %>
      </div>
      <div id="tuesday">
        <% if @hint.tuesday_title != "" %>
          <%= @hint.tuesday_title %>
          <div id="tuesday_thumbnail" style="background-image:url('<%= @hint.thumbnail %>')"></div>
        <% else %>
          TUESDAY
          <div id="lock"></div>
        <% end %>
      </div>
      <div id="wednesday">
        <% if @hint.wednesday_title != "" %>
          <%= @hint.wednesday_title %>
          <div id="wednesday_thumbnail" style="background-image:url('<%= @hint.thumbnail %>')"></div>
        <% else %>
          WEDNESDAY
          <div id="lock"></div>
        <% end %>
      </div>
      <div id="thursday">
        <% if @hint.thursday_title != "" %>
          <%= @hint.thursday_title %>
          <div id="thursday_thumbnail" style="background-image:url('<%= @hint.thumbnail %>')"></div>
        <% else %>
          THURSDAY
          <div id="lock"></div>
        <% end %>
      </div>
      <div id="friday">
        <% if @hint.friday_title != "" %>
          <%= @hint.friday_title %>
          <div id="friday_thumbnail" style="background-image:url('<%= @hint.thumbnail %>')"></div>
        <% else %>
          FRIDAY
          <div id="lock"></div>
        <% end %>
      </div>
    </div>
    <div id="mondays">
    <div id="monday_big" class="big_hint" style="background-image:url('<%= @hint.image %>')"></div>
    <div id="monday_side" class="big_hint"><div class="x_white">&times;</div><p><strong><%= @hint.monday_title %></strong></p><p><em>hint posted on Monday</em></p></div>
