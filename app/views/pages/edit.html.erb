  <p><label for="wednesday_title">Wednesday hint title: </label><br />
    <input type="text" name="wednesday_title" size="67" value="<%= @hint.wednesday_title %>">
  </p>
  <p><label for="thursday_title">Thursday hint title: </label><br />
    <input type="text" name="thursday_title" size="67" value="<%= @hint.thursday_title %>">
  </p>
  <p><label for="friday_title">Friday hint title: </label><br />
