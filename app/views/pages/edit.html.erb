<div id="admin_title"><h2>Edit <%= @album.album_title %></h2></div>
	<form method="post" action="/album/<%= @album.url %>/edit">
		<p><label for="album_title">Album title </label><input type="text" name="album_title" value="<%= h @album.album_title %>" size="70"></p>
		<p><label for="album_cover">Album cover link: </label><input type="url" name="album_cover" value="<%= h @album.album_cover %>" size="70"></p>
		<p><label for="album_review">Album review: </label><textarea rows="15" cols="70" name="album_review"><%= h @album.album_review %></textarea></p>
		<p><label for="rdio">Rdio embed code: </label><input type="text" name="rdio" size="100" value="<%= h @album.rdio %>"</p>
<div id="admin_title"><h2>Edit its location</h2></div>
		<p><label for="place_title">Place title: </label><input type="text" name="place_title" value="<%= h @album.place_title %>" size="70"></p>
		<p><label for="place_description">Place description: </label><textarea rows="15" cols="70" name="place_description"><%= h @album.place_description %></textarea></p>
		<p><label for="pinpoint_description">Pinpoint description: </label><textarea rows="15" cols="70" name="pinpoint_description"><%= h @album.pinpoint_description %></textarea></p>
		<p><label for="city">City: </label><input type="text" name="city" value="<%= @album.city %>"></p>
		<p><label for="hidden_place">Hidden place (tell no one): </label><input type="text" name="hidden_place" value="<%= @album.hidden_place %>"></p>
		<p><label for="map">Google Maps embed code without pinpoint: </label><input type="text" name="map" size="100" value="<%= h @album.map %>" size="70"></p>
		<p><label for="pinpoint_map">Google Maps embed code with pinpoint: </label><input type="text" name="pinpoint_map" size="100" value="<%= h @album.pinpoint_map %>" size="70"></p>
		<p><input type="submit" value="Submit"></p>
	</form>
	<hr>
	<form method="post" action="/album/<%= @album.url %>/found">
	<input type="text" name="found" placeholder="Type FOUND and submit to mark this album as found." size="46">
	<input type="submit" value="Submit">
	<hr>
	<form method="post" action="/album/<%= @album.url %>/delete">
	<input type="text" name="delete" placeholder="Type DELETE and submit to delete this album." size="46">
	<input type="submit" value="Submit">
	</form>