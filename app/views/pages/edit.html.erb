<% if @allow_edit == true %>
<form method="post" action="/album/<%= @album.url %>/edit">
  <div id="admin_title">
    <h2>Edit <%= @album.album_title %></h2>
  </div>
  
  <p><label for="album_title">Album title: </label><br />
    <input type="text" name="album_title" size="67" value="<%= @album.album_title %>">
  </p>
	<p><label for="album_cover">Album cover link: </label><br />
    <input type="url" name="album_cover" size="67" value="<%= @album.album_cover %>">
  </p>
	<p><label for="album_review">Album review: </label><br />
    <textarea rows="4" cols="70" name="album_review"><%= @album.album_review %></textarea>
  </p>
	<p><label for="album_rdio">Rdio share link: </label><br />
    <input type="text" name="rdio" size="67" value="<%= @album.rdio %>">
  </p>
  <p><label for="review_link">Review link: </label><br />
